@using TPLOCAL1.Models
@model TPLOCAL1.Models.FormModel

<head>
    <link rel="stylesheet" href="~/resources/Index.css">
</head>
<header>
    <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
    <h1>Votre avis à été prit en compte</h1>
</header>
<body>
    <nav>
        <ul>
            <li><a href="/Home/Index">Acceuil</a></li>                                                                            
            <li><a href="/Home/Index/OpinionList">Liste avis</a></li>
        </ul>
    </nav>

    <section> 
        <p class="titre">Informations Personelles</p>
            <table>
                <tr>
                    <td>Nom:</td>
                    <td>@Html.DisplayFor(model => model.Nom)</td>
                </tr>
                <tr>
                    <td>Prenom:</td>
                    <td>@Html.DisplayFor(model => model.Prenom)</td>
                </tr>
                <tr>
                    <td>Sexe:</td>
                    <td>@Html.DisplayFor(model => model.Sexe)</td>
                </tr>
                <tr>
                    <td>Adresse:</td>
                    <td>@Html.DisplayFor(model => model.Adresse)</td>
                </tr>
                <tr>
                    <td>Code Postale:</td>
                    <td>@Html.DisplayFor(model => model.Zipcode)</td>
                </tr>
                <tr>
                    <td>Ville:</td>
                    <td>@Html.DisplayFor(model => model.Ville)</td>
                </tr>
                <tr>
                    <td>Adresse Mail:</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
            </table><br>

            <p class="titre">Informations Formation suivie</p>
            <table>
                <tr>
                    <td>Date de Début Formation:</td>
                    <td>@Html.DisplayFor(model => model.Debut)</td>
                </tr>
                <tr>
                    <td>Type de Formation:</td>
                    <td>@Html.DisplayFor(model => model.Formation)</td>
                </tr>
            </table><br>

            <p class="titre">Avis Formation</p>
            <table>
                <tr>
                    <td>Formation Cobol:</td>
                    <td>@Html.DisplayFor(model => model.Avis1)</td>
                </tr>
            <tr>
                <td>Formation C#:</td>
                <td>@Html.DisplayFor(model => model.Avis2)</td>
            </tr>
            </table>
    </section>
</body>
